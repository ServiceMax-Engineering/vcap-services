dbpath = <%= data_dir %>
logpath = <%= log_file %>
logappend = false  # This doesn't works

bind_ip = 0.0.0.0
port = <%= port %>

auth = true

nohttpinterface = true

# mms-token = <%= password %>

# journaling is currently preallocating 4G of space on disk
# we can't do that.
#
<%= "#" if journal.nil?  %>journal    = <%= journal %>
<%= "#" if noprealloc.nil? || noprealloc=='false'  %>noprealloc = <%= noprealloc %>

#with the default parameters:
# smallfiles = start first container file at 16MB, doubling 4 times.
# so this = 240MB per user. (i.e. 16MB container + 32MB + 64MB + 128MB)
#TODO: investigate ... in fact experience shows 4 files of 16MB.
quota      = <%= quota %>
quotaFiles = <%= quotaFiles %>
smallfiles = <%= smallfiles %>
